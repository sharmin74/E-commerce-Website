<%- include("partials/header") -%>

    <div class="container mt-5">
        <div id="admin-page">
            <h3 class="text-center mb-4">ADMIN FORM</h3>
            <form action="/admin" method="POST" enctype="multipart/form-data">
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="productImage" multiple />
                <br>
                <input type="text" class="form-control" name="name" value="" placeholder="name">
                <br>
                <input type="number" class="form-control" name="price" value="" placeholder="price">
                <br>
                <input type="text" class="form-control" name="colour" value="" placeholder="color">
                <br>
                <input type="text" class="form-control" name="quantity" value="" placeholder="quantity">
                <br>
                <label for="size">Description:</label>
                <textarea type="text" class="form-control" name="description" value="" placeholder="description">
                    </textarea>
                <br>
                <label for="size">Size:</label>
                <select name="size" class="form-control">
                    <option value="s">small</option>
                    <option value="m">medium</option>
                    <option value="l">large</option>
                    <option value="xl">xtra large</option>
                </select>
                <br>
                <button type="submit" class="btn btn-dark form-control">SUBMIT</button>
            </form>
        </div>
    </div>

    <%- include("partials/footer") -%>