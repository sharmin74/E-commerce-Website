<%- include("partials/header") -%>

    <!-- CAROUSEL -->
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="10000">
                <img class="carousel-image img-fluid" src="photos/carousel4.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>IN STOCK</h2>
                    <h5>
                        <a href="#">SHOP NOW!</a>
                    </h5>
                </div>
            </div>
            <div class="carousel-item" data-interval="2000">
                <img class="carousel-image img-fluid" src="photos/carousel3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>TKASTORES</h2>
                    <h5>
                        <a href="#">SHOP NOW!</a>
                    </h5>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- GRID  -->
    <div class="container-fluid mt-5 index-page">
        <div class="container">
            <div class="row text-center">
                <% for ( i=Products.length-1 ; i>= 0 ; i-- ) { %>
                    <div class="col col-md-3 col-sm-5 col-xs-5">
                        <div class="cont">
                            <div class="middle">
                                <a style="text-decoration:none;" href="/product/<%=Products[i].id%>">
                                    <div class="text">
                                        View
                                    </div>
                                </a>
                            </div>
                            <img class="index-img" src=<%=Products[i].productImage[0] %> alt="product-img">
                        </div>
                        <br>
                        <p class="mt-4">
                            <span class="font-weight-bold "><%= Products[i].name %></span> <br>
                            <small><%= Products[i].price %></small>
                        </p>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>
    </div>
    </div>

    <%- include("partials/footer") -%>